{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ripple",
  "version": "0.1.0",
  "identifier": "com.ripple.ripple",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ripple",
        "transparent": true,
        "decorations": false,
        "width": 500,
        "height": 200,
        "resizable": false,
        "backgroundColor": "#00000000"
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  }
}
